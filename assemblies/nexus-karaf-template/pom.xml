<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.sonatype.nexus.assemblies</groupId>
    <artifactId>nexus-assemblies</artifactId>
    <version>3.0.0-SNAPSHOT</version>
  </parent>

  <artifactId>nexus-karaf-template</artifactId>
  <name>${project.groupId}:${project.artifactId}</name>
  <packaging>karaf-assembly</packaging>

  <dependencies>
    <!--
    Karaf features
    -->
    <dependency>
      <groupId>org.apache.karaf.features</groupId>
      <artifactId>framework</artifactId>
      <type>kar</type>
      <scope>compile</scope>
    </dependency>

    <dependency>
      <groupId>org.apache.karaf.features</groupId>
      <artifactId>standard</artifactId>
      <classifier>features</classifier>
      <type>xml</type>
      <scope>runtime</scope>
    </dependency>

    <!--
    Nexus features
    -->
    <dependency>
      <groupId>org.sonatype.nexus.assemblies</groupId>
      <artifactId>nexus-base-feature</artifactId>
      <version>${nexus.version}</version>
      <classifier>features</classifier>
      <type>xml</type>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>org.sonatype.nexus</groupId>
      <artifactId>nexus-oss-edition</artifactId>
      <version>${nexus.version}</version>
      <classifier>features</classifier>
      <type>xml</type>
      <scope>runtime</scope>
    </dependency>

    <!--
    Plugin features
    -->
    <dependency>
      <groupId>org.sonatype.nexus.plugins</groupId>
      <artifactId>nexus-content-plugin</artifactId>
      <version>${nexus.version}</version>
      <classifier>features</classifier>
      <type>xml</type>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>org.sonatype.nexus.plugins</groupId>
      <artifactId>nexus-webresources-plugin</artifactId>
      <version>${nexus.version}</version>
      <classifier>features</classifier>
      <type>xml</type>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>org.sonatype.nexus.plugins</groupId>
      <artifactId>nexus-crypto-plugin</artifactId>
      <version>${nexus.version}</version>
      <classifier>features</classifier>
      <type>xml</type>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>org.sonatype.nexus.plugins</groupId>
      <artifactId>nexus-groovy-plugin</artifactId>
      <version>${nexus.version}</version>
      <classifier>features</classifier>
      <type>xml</type>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>org.sonatype.nexus.plugins</groupId>
      <artifactId>nexus-restlet1x-plugin</artifactId>
      <version>${nexus.version}</version>
      <classifier>features</classifier>
      <type>xml</type>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>org.sonatype.nexus.plugins</groupId>
      <artifactId>nexus-siesta-plugin</artifactId>
      <version>${nexus.version}</version>
      <classifier>features</classifier>
      <type>xml</type>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>org.sonatype.nexus.plugins</groupId>
      <artifactId>nexus-lvo-plugin</artifactId>
      <version>${nexus.version}</version>
      <classifier>features</classifier>
      <type>xml</type>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>org.sonatype.nexus.plugins</groupId>
      <artifactId>nexus-plugin-console-plugin</artifactId>
      <version>${nexus.version}</version>
      <classifier>features</classifier>
      <type>xml</type>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>org.sonatype.nexus.plugins</groupId>
      <artifactId>nexus-ssl-plugin</artifactId>
      <version>${nexus.version}</version>
      <classifier>features</classifier>
      <type>xml</type>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>org.sonatype.nexus.plugins</groupId>
      <artifactId>nexus-ldap-plugin</artifactId>
      <version>${nexus.version}</version>
      <classifier>features</classifier>
      <type>xml</type>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>org.sonatype.nexus.plugins</groupId>
      <artifactId>nexus-maven-bridge-plugin</artifactId>
      <version>${nexus.version}</version>
      <classifier>features</classifier>
      <type>xml</type>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>org.sonatype.nexus.plugins</groupId>
      <artifactId>nexus-rrb-plugin</artifactId>
      <version>${nexus.version}</version>
      <classifier>features</classifier>
      <type>xml</type>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>org.sonatype.nexus.plugins</groupId>
      <artifactId>nexus-indexer-lucene-plugin</artifactId>
      <version>${nexus.version}</version>
      <classifier>features</classifier>
      <type>xml</type>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>org.sonatype.nexus.plugins</groupId>
      <artifactId>nexus-timeline-plugin</artifactId>
      <version>${nexus.version}</version>
      <classifier>features</classifier>
      <type>xml</type>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>org.sonatype.nexus.plugins</groupId>
      <artifactId>nexus-archetype-plugin</artifactId>
      <version>${nexus.version}</version>
      <classifier>features</classifier>
      <type>xml</type>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>org.sonatype.nexus.plugins</groupId>
      <artifactId>nexus-ui-extjs3-plugin</artifactId>
      <version>${nexus.version}</version>
      <classifier>features</classifier>
      <type>xml</type>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>org.sonatype.nexus.plugins</groupId>
      <artifactId>nexus-capabilities-plugin</artifactId>
      <version>${nexus.version}</version>
      <classifier>features</classifier>
      <type>xml</type>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>org.sonatype.nexus.plugins</groupId>
      <artifactId>nexus-logging-plugin</artifactId>
      <version>${nexus.version}</version>
      <classifier>features</classifier>
      <type>xml</type>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>org.sonatype.nexus.plugins</groupId>
      <artifactId>nexus-atlas-plugin</artifactId>
      <version>${nexus.version}</version>
      <classifier>features</classifier>
      <type>xml</type>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>org.sonatype.nexus.plugins</groupId>
      <artifactId>nexus-wonderland-plugin</artifactId>
      <version>${nexus.version}</version>
      <classifier>features</classifier>
      <type>xml</type>
      <scope>runtime</scope>
    </dependency>

    <!-- rapture -->

    <dependency>
      <groupId>org.sonatype.nexus.plugins</groupId>
      <artifactId>nexus-rapture-plugin</artifactId>
      <version>${nexus.version}</version>
      <classifier>features</classifier>
      <type>xml</type>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>org.sonatype.nexus.plugins</groupId>
      <artifactId>nexus-extdirect-plugin</artifactId>
      <version>${nexus.version}</version>
      <classifier>features</classifier>
      <type>xml</type>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>org.sonatype.nexus.plugins</groupId>
      <artifactId>nexus-coreui-plugin</artifactId>
      <version>${nexus.version}</version>
      <classifier>features</classifier>
      <type>xml</type>
      <scope>runtime</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <phase>prepare-package</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <echo append="true" file="${project.build.directory}/assembly/bin/setenv">
                  export JAVA_MAX_PERM_MEM=256M
                </echo>
                <echo append="true" file="${project.build.directory}/assembly/bin/setenv.bat">
                  SET JAVA_MAX_PERM_MEM=256M
                </echo>
                <echo append="false" file="${project.build.directory}/assembly/etc/org.ops4j.pax.logging.cfg">
                  org.ops4j.pax.logging.logback.config.file=${karaf.base}/conf/logback.xml
                </echo>
                <echo append="true" file="${project.build.directory}/assembly/etc/custom.properties">
                  nexus-base=${karaf.base}
                  nexus-args=${karaf.base}/conf/jetty.xml,${karaf.base}/conf/jetty-requestlog.xml
                </echo>
                <echo append="true" file="${project.build.directory}/assembly/etc/system.properties">
                  org.ops4j.pax.logging.StaticLogbackContext=true
                </echo>
                <replace file="${project.build.directory}/assembly/etc/startup.properties">
<!-- TODO: find a better way to replace this section -->
<replacetoken><![CDATA[
mvn\:org.ops4j.pax.logging/pax-logging-api/1.7.2 = 8
mvn\:org.ops4j.pax.logging/pax-logging-service/1.7.2 = 8
]]></replacetoken>
<replacevalue><![CDATA[
mvn\:com.codahale.metrics/metrics-core/3.0.2 = 8
mvn\:com.codahale.metrics/metrics-logback/3.0.2 = 8
mvn\:org.sonatype.nexus/pax-logging-metrics/3.0.0-SNAPSHOT = 8
mvn\:org.ops4j.pax.logging/pax-logging-api/1.7.3-SNAPSHOT = 8
mvn\:org.ops4j.pax.logging/pax-logging-logback/1.7.3-SNAPSHOT = 8
]]></replacevalue>
                </replace>
                <replace file="${project.build.directory}/assembly/etc/org.apache.karaf.features.cfg"
                  token=",management" value=",nexus-oss-edition" />
                <move todir="${project.build.directory}/assembly/plugin-repository" flatten="true">
                  <fileset dir="${project.build.directory}/assembly/system" includes="**/nexus-*-plugin-*.jar" />
                </move>
              </target>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.apache.karaf.tooling</groupId>
        <artifactId>karaf-maven-plugin</artifactId>
        <configuration>
          <bootFeatures>
            <feature>standard</feature>
          </bootFeatures>
          <installedFeatures>
            <feature>nexus-base-feature</feature>
            <feature>nexus-oss-edition</feature>
            <feature>nexus-content-plugin</feature>
            <feature>nexus-webresources-plugin</feature>
            <feature>nexus-crypto-plugin</feature>
            <feature>nexus-groovy-plugin</feature>
            <feature>nexus-restlet1x-plugin</feature>
            <feature>nexus-siesta-plugin</feature>
            <feature>nexus-lvo-plugin</feature>
            <feature>nexus-plugin-console-plugin</feature>
            <feature>nexus-ssl-plugin</feature>
            <feature>nexus-ldap-plugin</feature>
            <feature>nexus-maven-bridge-plugin</feature>
            <feature>nexus-rrb-plugin</feature>
            <feature>nexus-indexer-lucene-plugin</feature>
            <feature>nexus-timeline-plugin</feature>
            <feature>nexus-archetype-plugin</feature>
            <feature>nexus-ui-extjs3-plugin</feature>
            <feature>nexus-capabilities-plugin</feature>
            <feature>nexus-logging-plugin</feature>
            <feature>nexus-atlas-plugin</feature>
            <feature>nexus-wonderland-plugin</feature>
            <feature>nexus-rapture-plugin</feature>
            <feature>nexus-extdirect-plugin</feature>
            <feature>nexus-coreui-plugin</feature>
          </installedFeatures>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
