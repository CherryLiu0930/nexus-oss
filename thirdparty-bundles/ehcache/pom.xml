<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.sonatype.nexus.bundles</groupId>
    <artifactId>nexus-thirdparty-bundles</artifactId>
    <version>3.0.0-SNAPSHOT</version>
  </parent>

  <artifactId>org.sonatype.nexus.bundles.ehcache</artifactId>
  <name>${project.groupId}:${project.artifactId}</name>
  <packaging>bundle</packaging>

  <description>
    Provides stripped down bundle of mvn:net.sf.ehcache:ehcache:${ehcache.version}.
  </description>

  <properties>
    <ehcache.version>2.10.0</ehcache.version>
  </properties>

  <dependencies>
    <dependency>
      <groupId>net.sf.ehcache</groupId>
      <artifactId>ehcache</artifactId>
      <version>${ehcache.version}</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <!--
      NOTE: This may complain about private references to org.terracotta.* junk.
      -->
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <configuration>
          <unpackBundle>true</unpackBundle>
          <niceManifest>true</niceManifest>
          <instructions>
            <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
            <Bundle-Description>${project.description}</Bundle-Description>
            <Export-Package>net.sf.ehcache*;version=${ehcache.version};-split-package:=merge-first</Export-Package>
            <Private-Package>org.terracotta.*</Private-Package>
            <DynamicImport-Package>*</DynamicImport-Package>
            <Import-Package>
              javax.management*,
              javax.naming*,
              javax.xml.parsers,
              org.xml.sax*,
              javax.servlet;resolution:=optional,
              javax.transaction*;resolution:=optional,
              org.hibernate*;resolution:=optional,
              org.slf4j;resolution:=optional,
              javax.jms;resolution:=optional,
              sun.misc;resolution:=optional,
              org.quartz*;resolution:=optional,
              org.terracotta.quartz.*;resolution:=optional,
              org.terracotta.toolkit.*;resolution:=optional,
              com.terracotta*;resolution:=optional,
              *
            </Import-Package>
          </instructions>
        </configuration>
      </plugin>

      <!--
      NOTE: This will complain about duplicates, due to shade and bundle plugin copying classes from dependencies.
      -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <createDependencyReducedPom>true</createDependencyReducedPom>
              <createSourcesJar>true</createSourcesJar>
              <artifactSet>
                <includes>
                  <include>net.sf.ehcache:ehcache</include>
                </includes>
              </artifactSet>
              <filters>
                <filter>
                  <artifact>net.sf.ehcache:ehcache</artifact>
                  <includes>
                    <include>net/sf/ehcache/**</include>
                    <include>org/terracotta/context/**</include>
                    <include>org/terracotta/statistics/**</include>
                    <include>ehcache-failsafe.xml</include>
                    <include>META-INF/maven/net.sf.ehcache/**</include>
                  </includes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
